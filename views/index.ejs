    // Create wheel sectors
    const wheelCanvas = document.createElement('canvas');
    wheelCanvas.width = 300;
    wheelCanvas.height = 300;
    wheel.appendChild(wheelCanvas);
    const ctx = wheelCanvas.getContext('2d');
    const radius = wheelCanvas.width / 2;

    function drawWheel() {
      const numPlaces = touristPlaces.length;
      const arc = (2 * Math.PI) / numPlaces;
      for (let i = 0; i < numPlaces; i++) {
        const startAngle = i * arc;
        const endAngle = startAngle + arc;
        ctx.beginPath();
        ctx.moveTo(radius, radius);
        ctx.arc(radius, radius, radius, startAngle, endAngle);
        ctx.fillStyle = i % 2 === 0 ? '#ffcc80' : '#ffe0b2';
        ctx.fill();
        ctx.strokeStyle = '#0c3b2e';
        ctx.stroke();

        // Draw image
        const img = new Image();
        img.src = touristPlaces[i].images[0];
        img.onload = () => {
          ctx.save();
          ctx.translate(radius, radius);
          const angle = startAngle + arc / 2;
          ctx.rotate(angle);
          ctx.drawImage(img, radius * 0.5, -radius * 0.1, 50, 50);
          ctx.restore();
        }
      }
    }

    drawWheel();

    let deg = 0;
    spinBtn.addEventListener('click', () => {
      let rand = 5000 + Math.random() * 5000;
      deg += rand;
      wheelCanvas.style.transition = 'transform 5s ease-out';
      wheelCanvas.style.transform = `rotate(${deg}deg)`;
      setTimeout(() => {
        const normalizedDeg = deg % 360;
        const sectorAngle = 360 / touristPlaces.length;
        const selectedIndex = touristPlaces.length - 1 - Math.floor(normalizedDeg / sectorAngle);
        window.location.href = `/spinresult/${selectedIndex}`;
      }, 5000);

    });


