/* Hero Slider */
.hero-slider {
  position: relative;
  width: 100%;
  height: 90vh;
  overflow: hidden;
}

.hero-slider .slide {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  opacity: 0;
  transition: opacity 1s ease-in-out;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero-slider .slide.active {
  opacity: 1;
  z-index: 1;
}

.hero-slider .overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
}

.hero-text {
  position: relative;
  text-align: center;
  color: #FAF9EE;
  max-width: 90%;
}

.hero-text h1 {
  font-size: 3rem;
  margin-bottom: 15px;
  animation: fadeInDown 1s forwards;
}

.hero-text p {
  font-size: 1.3rem;
  margin-bottom: 20px;
  animation: fadeInUp 1s forwards;
}

.hero-text .btn {
  padding: 12px 30px;
  border: none;
  border-radius: 6px;
  background: #DCCFC0;
  color: #333;
  cursor: pointer;
  transition: 0.3s;
}

.hero-text .btn:hover {
  background: #A2AF9B;
  color: #FAF9EE;
}

.slider-nav {
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: space-between;
  top: 50%;
  transform: translateY(-50%);
  padding: 0 20px;
  z-index: 2;
}

.slider-nav span {
  font-size: 2rem;
  cursor: pointer;
  color: #FAF9EE;
  background: rgba(0, 0, 0, 0.2);
  padding: 5px 10px;
  border-radius: 50%;
}

.dots {
  position: absolute;
  bottom: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 10px;
  z-index: 2;
}

.dots span {
  width: 12px;
  height: 12px;
  background: #FAF9EE;
  border-radius: 50%;
  cursor: pointer;
  opacity: 0.5;
}

.dots span.active {
  opacity: 1;
}

@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-50px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(50px); }
  to { opacity: 1; transform: translateY(0); }
}

@media (max-width:768px) {
  .hero-text h1 { font-size: 2rem; }
  .hero-text p { font-size: 1rem; }
