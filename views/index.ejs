/* Tourist Places */
.places-section {
  padding: 50px 20px;
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}

.place-card {
  background: #EEEEEE;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: 0.3s;
  position: relative;
}

.place-card:hover {
  transform: scale(1.03);
}

.place-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  transition: transform 0.3s;
}

.place-card:hover img {
  transform: scale(1.1);
}

.place-card .card-content {
  padding: 15px;
}

.place-card h3 {
  color: #0c3b2e;
  margin-bottom: 8px;
}

.place-card p {
  color: #555;
  font-size: 0.95rem;
}

.place-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: #DCCFC0;
  color: #333;
  padding: 5px 10px;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: bold;
}

/* Fun Facts */
.fun-facts {
  display: flex;
  overflow-x: auto;
  gap: 20px;
  padding: 50px 20px;
  scroll-snap-type: x mandatory;
}

.fact-card {
  flex: 0 0 250px;
  background: #EEEEEE;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: 0.3s;
  cursor: pointer;
  scroll-snap-align: start;
}

.fact-card:hover {
  transform: scale(1.05);
  background: #DCCFC0;
}

.fact-card h3 {
  color: #A2AF9B;
  margin-bottom: 10px;
}

.fact-card p {
  color: #555;
}

/* Visitor Counter */
