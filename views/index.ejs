      if (spinning) return;
      spinning = true;

      const numPlaces = touristPlaces.length;
      const spinAngle = Math.floor(2000 + Math.random() * 2000); // random spin
      let currentRotation = 0;
      const spinDuration = 4000;
      const start = performance.now();

      function animate(time) {
        const progress = Math.min((time - start) / spinDuration, 1);
        currentRotation = spinAngle * progress;
        ctx.clearRect(0, 0, wheelCanvas.width, wheelCanvas.height);
        ctx.save();
        ctx.translate(radius, radius);
        ctx.rotate((currentRotation * Math.PI) / 180);
        ctx.translate(-radius, -radius);
        drawWheel();
        ctx.restore();

        if (progress < 1) {
          requestAnimationFrame(animate);
        } else {
          spinning = false;

          // ✅ Determine selected place
          const degrees = currentRotation % 360;
          const index = Math.floor(numPlaces - (degrees / (360 / numPlaces))) % numPlaces;

          // ✅ Redirect to server route
          window.location.href = `/spinresult/${index}`;
        }
      }
      requestAnimationFrame(animate);
    });



