  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <style>
    /* ===== General Styles ===== */
    body {
      margin: 0;
      font-family: 'Arial', sans-serif;
      background-color: #f5f5f5;
      color: #333;
    }

    a {
      text-decoration: none;
    }

    /* ===== Navbar ===== */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #043927;
      padding: 10px 30px;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      flex-wrap: wrap;
    }

    .navbar .logo {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 22px;
      font-weight: bold;
      color: white;
      transition: transform 0.3s;
    }

    .navbar .logo img {
      height: 45px;
      width: 45px;
      border-radius: 50%;
      border: 2px solid white;
      transition: transform 0.3s, border-color 0.3s;
    }

    .navbar .logo:hover img {
      transform: rotate(15deg) scale(1.1);
      border-color: #ffd700;
    }

    .navbar .nav-links {
      list-style: none;
      display: flex;
      gap: 20px;
    }

    .navbar .nav-links li a {
      color: white;
      padding: 8px 12px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      gap: 5px;
      font-size: 16px;
      position: relative;
      transition: all 0.3s;
    }

    .navbar .nav-links li a::after {
      content: '';
      height: 2px;
      width: 0;
      background: #ffd700;
      position: absolute;
      bottom: 0;
      left: 0;
      transition: width 0.3s;
    }

    .navbar .nav-links li a:hover::after,
    .navbar .nav-links li a.active::after {
      width: 100%;
    }

    .navbar .nav-links li a:hover,
    .navbar .nav-links li a.active {
      background: #065a44;
      transform: translateY(-2px);
    }

    /* ===== Hamburger ===== */
    .hamburger {
      display: none;
      font-size: 24px;
      color: white;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .hamburger:hover {
      transform: rotate(90deg) scale(1.1);
    }

    /* ===== Main Content ===== */
    main.container {
      max-width: 900px;
      margin: 40px auto;
      padding: 20px;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      position: relative;
    }

    main h1 {
      color: #043927;
      margin-bottom: 20px;
      text-align: center;
    }

    .result-img {
      width: 100%;
      border-radius: 12px;
      margin-bottom: 20px;
      object-fit: cover;
    }

    .result-desc {
      font-size: 16px;
      line-height: 1.6;
      color: #555;
      margin-bottom: 20px;
    }

    .read-more {
      display: inline-block;
      padding: 10px 20px;
      background-color: #065a44;
      color: white;
      border-radius: 8px;
      transition: background 0.3s ease, transform 0.3s ease;
    }

    .read-more:hover {
      background-color: #043927;
      transform: translateY(-2px);
    }

    /* ===== Go Back Button ===== */
    .go-back {
      position: absolute;
      top: 20px;
      left: 20px;
      padding: 8px 15px;
      background-color: #ff9800;
      color: white;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s ease;
    }

    .go-back:hover {
      background-color: #e68a00;
    }

    /* ===== Responsive ===== */
    @media (max-width: 768px) {
      .hamburger {
        display: block;
      }

      .nav-links {
        position: absolute;
        top: 70px;
        right: -250px; /* hidden by default */
        flex-direction: column;
        width: 200px;
        background-color: #043927;
        border-radius: 8px;
        padding: 15px 0;
        gap: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        transition: right 0.4s ease;
      }

      .nav-links.show {
        right: 10px;
      }
    }

    /* ===== Footer ===== */
    footer {
      background-color: #043927;
      color: white;
      padding: 30px 20px;
      margin-top: 40px;
    }

    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 20px;
    }

    .footer-container div h4 {
      margin-bottom: 10px;
    }

    .footer-container div ul {
      list-style: none;
      padding: 0;
    }

    .footer-container div ul li {
      margin-bottom: 8px;
    }

    .footer-container div ul li a {
      color: white;
    }

    .footer-bottom {
      text-align: center;
      margin-top: 20px;
      border-top: 1px solid rgba(255,255,255,0.3);
      padding-top: 10px;
      font-size: 14px;
    }

    /* Social Icons */
    .footer-social .social a {
      margin-right: 10px;
      color: white;
      font-size: 20px;
      transition: color 0.3s;
    }
    .footer-social .social a:hover {
      color: #ff9800;
    }
  </style>
</head>
